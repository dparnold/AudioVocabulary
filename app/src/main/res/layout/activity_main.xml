<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dparnold.audiovocabulary.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <Button
            android:id="@+id/playButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16sp"
            android:text="Play" />

        <TextView
            android:id="@+id/textViewLang0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playButton"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:layout_marginTop="16sp"
            android:text="lang0" />

        <TextView
            android:id="@+id/textViewLang1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewLang0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16sp"
            android:textSize="32sp"
            android:text="lang1" />

    </RelativeLayout>

    <Button
        android:id="@+id/vocabTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Vocabulary test"
        android:onClick="toVocabTest"/>
    <Button
        android:onClick="toSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Settings"/>

    <Button
        android:onClick="toVocabList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Vocabulary"/>

</LinearLayout>